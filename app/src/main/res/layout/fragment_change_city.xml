<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ChangeCity">

    <TextView
        android:id="@+id/cities_list_header"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/def_city"
        android:textSize="@dimen/def_text_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cities_list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/def_text_size" />
</FrameLayout>